generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String               @id
  sessions      Session[]
  firstName     String?
  lastName      String?
  email         String               @unique
  verified      DateTime?
  password_hash String
  image         String?
  Verification_Token         Verification_Token[]
}

model Verification_Token {
  id         String   @id
  expires_at DateTime
  userId     String
  user       User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Session {
  id        String   @id
  expiresAt DateTime
  userId    String
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}
